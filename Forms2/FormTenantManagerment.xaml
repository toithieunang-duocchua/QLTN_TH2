<UserControl x:Class="QLTN.Forms.FormTenantManagerment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLTN.Forms"
             mc:Ignorable="d" 
             Width="1000" Height="700">
    <UserControl.Resources>
        <!--  Bo góc cho TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0"
                                      x:Name="PART_ContentHost"
                                      VerticalScrollBarVisibility="Hidden"
                                      HorizontalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>

                            <ContentPresenter Margin="10,0,35,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>

                            <ToggleButton Grid.Column="2"
                                      Focusable="false"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Right"
                                      Width="35">
                                <Path Data="M 0 0 L 2 2 L 4 0 Z"
                                  Fill="#666"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" Height="4" Width="6"/>
                            </ToggleButton>

                            <Popup Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide"
                                Width="150">
                                <Border CornerRadius="6"
                                    Background="White"
                                    BorderBrush="#ddd"
                                    BorderThickness="1">
                                    <ScrollViewer Margin="4,6"
                                              SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#5B63D0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for small action buttons -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            Padding="10,6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CenteredText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid Background="#5B63D0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Header -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Search/Filter -->
            <RowDefinition Height="1*"/>
            <!-- Row 2: DataGrid -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="White"
                Margin="20,15,20,10"
                CornerRadius="12"
                Padding="20">
            <StackPanel VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="👥 " FontSize="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Quản lý Người thuê"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1F2937"/>
                </StackPanel>
                <TextBlock Text="Quản lý thông tin người thuê và vân tay"
                           FontSize="13"
                           Foreground="#6B7280"
                           Margin="28,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Search/Filter Bar -->
        <Border Grid.Row="1"
                Background="White"
                Margin="20,0,20,10"
                CornerRadius="12"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0" Margin="0,0,20,0">
                    <TextBox x:Name="SearchBox"
                             Height="44"
                             FontSize="14"
                             Padding="14,12,40,12"
                             BorderBrush="#E5E7EB"
                             BorderThickness="1"
                             Foreground="#333"
                             Background="White"
                             VerticalAlignment="Center"
                             TextChanged="SearchBox_TextChanged_1"/>

                    <TextBlock x:Name="Placeholder"
                               Text="🔍 Tìm kiếm theo tên, SDT,..."
                               Foreground="#9CA3AF"
                               FontSize="14"
                               Padding="14,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="Visible"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Room Filter -->
                <ComboBox Grid.Column="1"
                          Width="170"
                          Height="44"
                          SelectedIndex="0"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0">
                    <ComboBoxItem Content="Tất cả phòng"/>
                    <ComboBoxItem Content="101"/>
                    <ComboBoxItem Content="102"/>
                    <ComboBoxItem Content="103"/>
                </ComboBox>

                <!-- Add Tenant Button -->
                <Button Grid.Column="2"
                        Content="Thêm người thuê mới"
                        Width="160"
                        Height="44"
                        Background="#5B63D0"
                        Foreground="White"
                        FontSize="12"
                        VerticalAlignment="Center" Click="Button_Click"/>
            </Grid>
        </Border>

        <!-- DataGrid Container -->
        <Border Grid.Row="2"
                Background="White"
                Margin="20,0,20,20"
                CornerRadius="12"
                Padding="0"
                ClipToBounds="True">
            <DataGrid x:Name="TenantsDataGrid"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeColumns="False"
                      CanUserReorderColumns="False"
                      IsReadOnly="True"
                      RowHeight="55"
                      GridLinesVisibility="None"
                      Background="White"
                      BorderThickness="0"
                      VerticalAlignment="Stretch"
                      ItemsSource="{Binding NguoiThueList}">

                <DataGrid.Resources>
                    <!-- Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#6B7280"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>

                    <!-- Row Style -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="BorderBrush" Value="#F3F4F6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="12,0"
                                            Background="{TemplateBinding Background}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <!-- DataGrid Columns -->
                <DataGrid.Columns>

                    <!-- Column: NGƯỜI THUÊ -->
                    <DataGridTemplateColumn Header="NGƯỜI THUÊ" Width="1.3*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left">

                                    <TextBlock Text="{Binding Ten}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#1F2937"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Column: PHÒNG -->
                    <DataGridTextColumn Header="PHÒNG"
                                        Binding="{Binding Phong}"
                                        Width="0.8*"/>

                    <!-- Column: SỐ ĐIỆN THOẠI -->
                    <DataGridTextColumn Header="SỐ ĐIỆN THOẠI"
                                        Binding="{Binding SDT}"
                                        Width="1.2*"/>


                    <!-- Column: TRẠNG THÁI VÂN TAY -->
                    <DataGridTemplateColumn Header="TRẠNG THÁI VÂN TAY" Width="1.1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10"
                                        Padding="10,5"
                                        Background="{Binding MauTrangThai}"
                                        HorizontalAlignment="Left"
                                        Width="Auto">
                                    <TextBlock Text="{Binding TrangThai}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Column: HỢP ĐỒNG -->
                    <DataGridTemplateColumn Header="HỢP ĐỒNG" Width="1.1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10"
                                        Background="{Binding MauHopDong}"
                                        HorizontalAlignment="Left"
                                        Padding="10,5"
                                        Width="Auto">
                                    <TextBlock Text="{Binding HopDong}"
                                               Foreground="{Binding MauChuHopDong}"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Column: CHỈNH SỬA -->
                    <DataGridTemplateColumn Header="CHỈNH SỬA" Width="0.9*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏️ Sửa"
                                        Background="#DFF6E3"
                                        Foreground= "#4CAF50"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Padding="8,5"
                                        Click="EditButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="6"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Column: XÓA -->
                    <DataGridTemplateColumn Header="XÓA" Width="0.9*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑️ Xóa"
                                        Background="#F44336"
                                        Foreground="White"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Padding="8,5"
                                        Click="DeleteButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="6"
                                                Background="{TemplateBinding Background}"
                                                BorderThickness="0"
                                                Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>